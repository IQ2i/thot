{% extends 'base.html.twig' %}

{% block header_title %}
    {{ 'documents.title'|trans({'%project%': project.name}) }}
{% endblock %}

{% block content %}
    <div class="py-6 px-4 sm:py-8 sm:px-6 lg:py-12 lg:px-8">
        <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto">
                <h1 class="text-base font-semibold text-gray-900 dark:text-white">{{ 'documents.documents'|trans }}</h1>
                <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">{{ 'documents.documents_desc'|trans }}</p>
            </div>
            <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                <a href="{{ path('app_project_document_new', {project: project.id, source: source.id}) }}" class="block px-3 py-2 text-center text-sm font-semibold text-white bg-indigo-600 rounded-md shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    {{ 'action.add_document'|trans }}
                </a>
            </div>
        </div>
        <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                    {% if source.documents|length > 0 %}
                        <table class="relative min-w-full divide-y divide-gray-300 dark:divide-white/15">
                            <thead>
                                <tr>
                                    <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-0 dark:text-white">{{ 'documents.title_col'|trans }}</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">{{ 'documents.status'|trans }}</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">{{ 'documents.created_at'|trans }}</th>
                                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">{{ 'documents.updated_at'|trans }}</th>
                                    <th scope="col" class="py-3.5 pr-4 pl-3 sm:pr-0">
                                        <span class="sr-only">{{ 'action.edit'|trans }}</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200 dark:divide-white/10">
                                {% for document in source.documents %}
                                    <tr>
                                        <td class="py-4 pr-3 pl-4 text-sm font-medium whitespace-nowrap text-gray-900 sm:pl-0 dark:text-white">{{ document.title }}</td>
                                        <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 dark:text-gray-400">
                                            {% if document.closed %}
                                                <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-red-700 bg-red-50 rounded-md ring-1 ring-inset ring-red-600/20 dark:text-red-400 dark:bg-red-400/10 dark:ring-red-400/20">{{ 'documents.closed'|trans }}</span>
                                            {% else %}
                                                <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-green-700 bg-green-50 rounded-md ring-1 ring-inset ring-green-600/20 dark:text-green-400 dark:bg-green-400/10 dark:ring-green-400/20">{{ 'documents.active'|trans }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 dark:text-gray-400">
                                            {% if document.createdAt is not null %}{{ document.createdAt|format_datetime('short', 'short') }}{% endif %}
                                        </td>
                                        <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 dark:text-gray-400">
                                            {% if document.updatedAt is not null %}{{ document.updatedAt|format_datetime('short', 'short') }}{% endif %}
                                        </td>
                                        <td class="py-4 pr-4 pl-3 text-right text-sm font-medium whitespace-nowrap sm:pr-0">
                                            <a href="{{ path('app_project_document_edit', {project: project.id, source: source.id, document: document.id}) }}" class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300">{{ 'action.edit'|trans }}</a>
                                            <span class="mx-2 text-gray-300 dark:text-gray-600">|</span>
                                            <a href="{{ path('app_project_document_delete', {project: project.id, source: source.id, document: document.id}) }}" class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" onclick="return confirm('{{ 'confirm.delete_document'|trans }}')">{{ 'action.delete'|trans }}</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
