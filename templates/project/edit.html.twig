{% extends 'base.html.twig' %}

{% block header_title %}
    {% if project.id is not null %}
        Edit project - {{ project.name }}
    {% else %}
        New project
    {% endif %}
{% endblock %}

{% block header_actions %}
    {% if project.id is not null %}
        <a href="{{ path('app_project_delete', {id: project.id}) }}" class="rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs inset-ring inset-ring-gray-300 hover:bg-gray-50 dark:bg-white/10 dark:text-white dark:shadow-none dark:inset-ring-white/5 dark:hover:bg-white/20">Delete</a>
    {% endif %}
    <button type="submit" form="{{ field_id(form) }}" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-400">Save</button>
{% endblock %}

{% block content %}
    <twig:Project:Form :initialFormData="project" :form="form" />
{% endblock %}
