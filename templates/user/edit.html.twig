{% extends 'base.html.twig' %}

{% block header_title %}
    {% if user.id is not null %}
        {{ 'user.edit_user_with_name'|trans({'%username%': user.username}) }}
    {% else %}
        {{ 'user.new_user'|trans }}
    {% endif %}
{% endblock %}

{% block header_actions %}
    {% if user.id is not null %}
        <a href="{{ path('app_user_delete', {id: user.id}) }}" class="rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs inset-ring inset-ring-gray-300 hover:bg-gray-50 dark:bg-white/10 dark:text-white dark:shadow-none dark:inset-ring-white/5 dark:hover:bg-white/20">{{ 'action.delete'|trans }}</a>
    {% endif %}
    <button type="submit" form="{{ field_id(form) }}" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:shadow-none dark:hover:bg-indigo-400 dark:focus-visible:outline-indigo-400">{{ 'action.save'|trans }}</button>
{% endblock %}

{% block content %}
    {{ form_start(form, {attr: {id: field_id(form)}}) }}
        <div class="divide-y divide-gray-200 dark:divide-white/10">
            <div class="grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 px-4 py-16 sm:px-6 md:grid-cols-3 lg:px-8">
                <div>
                    <h2 class="text-base/7 font-semibold text-gray-900 dark:text-white">{{ 'user.personal_information'|trans }}</h2>
                    <p class="mt-1 text-sm/6 text-gray-500 dark:text-gray-400">{{ 'user.personal_information_desc'|trans }}</p>
                </div>

                <div class="md:col-span-2">
                    <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:max-w-xl sm:grid-cols-6">
                        {{ form_row(form.username) }}
                    </div>
                </div>
            </div>

            <div class="grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 px-4 py-16 sm:px-6 md:grid-cols-3 lg:px-8">
                <div>
                    <h2 class="text-base/7 font-semibold text-gray-900 dark:text-white">{{ 'user.security'|trans }}</h2>
                    <p class="mt-1 text-sm/6 text-gray-500 dark:text-gray-400">{{ 'user.security_desc'|trans }}</p>
                </div>

                <div class="md:col-span-2">
                    <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:max-w-xl sm:grid-cols-6">
                        {{ form_row(form.roles) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.plainPassword) }}
                    </div>
                </div>
            </div>

            {% if user.id is not null %}
                <div class="grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 px-4 py-16 sm:px-6 md:grid-cols-3 lg:px-8">
                    <div>
                        <h2 class="text-base/7 font-semibold text-gray-900 dark:text-white">{{ 'user.delete_user'|trans }}</h2>
                        <p class="mt-1 text-sm/6 text-gray-500 dark:text-gray-400">{{ 'user.delete_user_warning'|trans }}</p>
                    </div>

                    <div class="flex items-start md:col-span-2">
                        <a href="{{ path('app_user_delete', {id: user.id}) }}" class="rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-red-500 dark:bg-red-500 dark:shadow-none dark:hover:bg-red-400">{{ 'user.delete_user_confirm'|trans }}</a>
                    </div>
                </div>
            {% endif %}
        </div>
    {{ form_end(form) }}
{% endblock %}
